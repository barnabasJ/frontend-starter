{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm clean && concurrently \"pnpm build:server --watch\" \"wait-on dist/server/index.js && pnpm start:server --watch dist/server\"",
    "clean": "rimraf dist",
    "build": "pnpm clean && pnpm build:server && pnpm build:client",
    "build:client": "vite build",
    "build:server": "esbuild src/server/index.ts --platform=node --sourcemap=inline --target=node18.12 --packages=external --outdir=dist/server",
    "start:server": "nodemon dist/server/index.js",
    "preview": "vite preview"
  },
  "dependencies": {
    "@fastify/express": "^2.3.0",
    "@fastify/middie": "^8.1.0",
    "@reduxjs/toolkit": "^1.9.1",
    "@types/node": "^18.11.18",
    "esbuild": "^0.16.11",
    "fastify": "^4.10.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.6.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^3.0.0",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.1.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "wait-on": "^7.0.1"
  }
}
